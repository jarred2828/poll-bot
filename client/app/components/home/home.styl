.home-container.md-padding
  min-height: 100vh
  @media screen and (min-width: 768px)
    padding: 0 100px
  margin-top: -35px
  .md-button.create-poll
    background-color: rgb(0, 150, 136)
    margin-bottom: 20px
    &:hover
      background-color: #22B8AA
  .poll-list
    width: 770px
    margin: 0 auto
    max-width: 100vw
    md-card
      margin-bottom: 30px
      .header
        background-color: transparent
      .item
        .completed-progress
          position: absolute
          left: -webkit-calc(50% - 150px)
          left: -moz-calc(50% - 150px)
          left: -ms-calc(50% - 150px)
          left: calc(50% - 150px)
          .full-bar
            width: 250px
          .progress-text
            line-height: 0.4
