.home-container.md-padding
  min-height: 100vh
  @media screen and (min-width: 768px)
    padding: 0 100px
  margin-top: -35px
  .md-button.create-poll
    background-color: rgb(0, 150, 136)
    margin-bottom: 20px
  .poll-list
    .header
      background-color: transparent
    .item
      .completed-progress
        position: absolute
        left: -webkit-calc(50% - 150px)
        left: -moz-calc(50% - 150px)
        left: -ms-calc(50% - 150px)
        left: calc(50% - 150px)
        div.full-bar
          border: 1px solid #3949ab
          max-height: 10px
          height: 10px
          width: 250px
          div.progress-bar
            background-color: rgb(57,73,171)
            height: 100%
        .progress-text
          max-height: 15px
          line-height: 1
  .polls
    margin-top: -90px
    .header
      background-color: transparent
      font-size: 24px
      color: #000
      font-weight: 600
      .md-subheader-inner
        padding: 30px 0    
    .item
      background-color: #fff
      font-size: 22px
      font-weight: 600
      border: 2px solid rgb(196, 196, 196)
      padding: 20px 30px
      &:not(.last-item)
        border-bottom: 0
      p
        cursor: pointer
      .completed-progress
        height: 50px
        position: absolute
        left: -webkit-calc(50% - 200px)
        left: -moz-calc(50% - 200px)
        left: -ms-calc(50% - 200px)
        left: calc(50% - 200px)
        div.full-bar
          border: 2px solid #3949ab
          max-height: 20px
          height: 20px
          width: 350px
          div.progress-bar
            background-color: rgb(57,73,171)
            height: 100%
        .progress-text
          max-height: 20px
          line-height: 1
      span
        color: rgb(136, 136, 136)
        font-weight: 500
  table.md-table
    th.md-column
      font-size: 16px
      &.md-checkbox-column
        display: none
    td.md-cell
      height: 50px
      div.full-bar
        border: 2px solid #3949ab
        max-height: 20px
        height: 20px
        width: 350px
        div.progress-bar
          background-color: rgb(57,73,171)
          height: 100%
      .progress-text
        max-height: 20px
        line-height: 1
      &.md-checkbox-cell
        display: none

