.home-container.md-padding
  min-height: -webkit-calc(100vh - 48px)
  min-height: -moz-calc(100vh - 48px)
  min-height: -ms-calc(100vh - 48px)
  min-height: calc(100vh - 48px)
  padding-top: 80px
  .md-button.create-poll
    background-color: rgb(0, 150, 136)
    position: fixed
    top: 30px
    right: 60px
    &:hover
      background-color: #22B8AA
  .no-poll
    position: relative
    margin-top: 50px
    h1
      text-align: center
    img
      position: absolute
      width: 300px
      top: 0
      right: 100px
  .poll-list
    width: 770px
    margin: 0 auto
    max-width: 100vw
    md-card
      margin-bottom: 30px
      .header
        background-color: transparent
      .item
        .completed-progress
          position: absolute
          left: -webkit-calc(50% - 150px)
          left: -moz-calc(50% - 150px)
          left: -ms-calc(50% - 150px)
          left: calc(50% - 150px)
          .full-bar
            width: 250px
          .progress-text
            line-height: 0.4
        .md-secondary-container
          .cancelled
            color: red
          .completed
            color: green
