.home-container.md-padding
  min-height: 100vh
  @media screen and (min-width: 768px)
    padding: 0 100px
  margin-top: -35px
  .md-button.create-poll
    background-color: rgb(0, 150, 136)
    margin-bottom: 20px
    &:hover
      background-color: #22B8AA
  .poll-list
    .header
      background-color: transparent
    .item
      .completed-progress
        position: absolute
        left: -webkit-calc(50% - 150px)
        left: -moz-calc(50% - 150px)
        left: -ms-calc(50% - 150px)
        left: calc(50% - 150px)
        div.full-bar
          border: 1px solid #3949ab
          max-height: 10px
          height: 10px
          width: 250px
          div.progress-bar
            background-color: rgb(57,73,171)
            height: 100%
        .progress-text
          max-height: 15px
          line-height: 1
